<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btn_acao_principal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:elevation" tools:targetApi="lollipop">1dp</item>
        <item name="android:translationZ" tools:targetApi="lollipop">1dp</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="textview_listagem_titulo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="textview_listagem_conteudo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textview_confirmar_carona">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment" tools:ignore="NewApi">textEnd</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
